@page
@model MyCookBookWebApplication.Pages.TagPageModel
@{
	ViewData["Title"] = "TagPage";
	string[] tagsList = Model.TagsList;

}

<!DOCTYPE html>
<html lang="heb" dir="rtl">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<head>
	<title>Recipe</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="~/css/TagPageStyle.css">
</head>
<body>

	<h3>טאגים</h3>
	<div class="tags">
	<form class="newRecipe" method="post">
		@foreach (string tag in tagsList) {
			<button type="submit" name="tag"  asp-page-handler="Tag" asp-route-id="@tag" class="tag">@tag</button>
		}
	</form>
	</div>

</body>
</html>

